                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/region"
                            android:textColor="@color/Black"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
