<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/text_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:text="@string/register"
        android:layout_marginTop="7dp"
        android:textColor="@color/Black"
        android:textSize="18dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="39dp"
        android:background="@color/viewcolor"/>

    <TextView
        android:id="@+id/text_reg_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="66dp"
        android:text="Enter your information so you can start adding items."
        android:textColor="@color/Black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_marginRight="7dp"
        android:text="+965"
        android:textColor="@color/Blue"
        android:textSize="17dp"
        android:layout_marginLeft="7dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/edt_phonenum"
        android:layout_alignTop="@+id/text_mobile"
        android:layout_marginLeft="-8dp"
        android:background="@color/viewcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/viewcolor" />

    <EditText
        android:id="@+id/edt_phonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text_mobile"
        android:layout_marginStart="58dp"
        android:background="@null"
        android:ems="10"
        android:hint="@string/mobile_number"
        android:inputType="number"
        android:theme="@style/EditTextStyleregiter"
         />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_reg_info"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:background="@null"
        android:hint="Email Address"
        android:theme="@style/EditTextStyleregiter"
        android:inputType="textEmailAddress" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/viewcolor" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="240dp"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/livesupport"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="@string/register"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/Blue"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>