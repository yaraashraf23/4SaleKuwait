<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TermsandConditionActivity">

    <TextView
        android:id="@+id/text_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:text="@string/terms_and_conditions"
        android:layout_marginTop="7dp"
        android:textColor="@color/Black"
        android:textSize="18dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="39dp"
        android:background="@color/viewcolor"/>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="146dp"
        android:layout_height="153dp"
        android:layout_below="@+id/text_support"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        app:srcCompat="@drawable/logoo" />

    <TextView
        android:id="@+id/text_aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_support"
        android:layout_marginTop="220dp"
        android:text="@string/terms_and_conditions_for_using_4sale"
        android:textColor="@color/Black"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp">

        <TextView
            android:id="@+id/text_details"
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/termsandconditionvision"
            android:textColor="@color/Black"
            android:textSize="16dp" />

    </LinearLayout>


</RelativeLayout>